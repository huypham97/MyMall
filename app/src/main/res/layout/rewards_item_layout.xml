<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/border_background">

    <ImageView
        android:id="@+id/reward_coupon_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/my_rewards"
        app:tint="@color/colorOnPrimary" />

    <TextView
        android:id="@+id/reward_coupon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Discount coupon"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/colorOnPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/reward_coupon_icon"
        app:layout_constraintStart_toEndOf="@+id/reward_coupon_icon"
        app:layout_constraintTop_toTopOf="@+id/reward_coupon_icon" />

    <TextView
        android:id="@+id/reward_coupon_validity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="till 13th,August 2015"
        android:textColor="#3606B6"
        android:textStyle="bold"
        android:background="@color/colorOnPrimary"
        android:padding="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reward_coupon_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="GET 20% OFF on any product above Rs.500/- and below Rs.2500/-."
        android:textColor="@color/colorOnPrimary"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reward_coupon_title" />
</androidx.constraintlayout.widget.ConstraintLayout>